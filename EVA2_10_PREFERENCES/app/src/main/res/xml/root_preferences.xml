<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory app:title="Mis preferencias">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="dia_laboral"
            android:title="Es día laboral?" />
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="nombre"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Tu nombre prro" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/ENTRADAS"
            android:entryValues="@array/SALIDAS"
            android:key="dia_semana"
            android:title="Días de la semana" />
    </PreferenceCategory>

    <Preference app:title="Más opciones"
        android:fragment="com.example.eva2_10_preferences.SettingsFragment2">

    </Preference>
   

</PreferenceScreen>